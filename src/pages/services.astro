---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "The Problem We Solve",
    subTitle:
      "Traditional exam evaluation systems lack crucial elements like detailed feedback, quick evaluation, and individual student growth tracking. This creates inefficiencies in the education process and limits students' ability to improve.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Blueprints and digital tablet with construction plans.",
    imgTwo: personWorking,
    imgTwoAlt: "Person working in the office",
  },
  {
    isRightSection: false,
    title: "Our AI-Powered Solution",
    subTitle:
      "Quintet-AI revolutionizes exam evaluation with instant grading, personalized feedback for each student, and comprehensive growth analytics. Our system helps educational institutions make data-driven decisions to improve learning outcomes.",
    img: beforeAfter,
    imgAlt: "Construction site before and after",
    btnExists: true,
    btnTitle: "Learn More",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Why Choose Quintet-AI",
    subTitle:
      "Our system provides unbiased, consistent evaluation while significantly reducing teacher workload. With advanced AI-driven analytics, institutions can track student progress over time and identify areas needing improvement.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Construction workers orchestrating a project",
    imgTwo: aerialView,
    imgTwoAlt: "Aerial view of managed construction",
  },
  {
    isRightSection: false,
    title: "Ensuring Long-lasting Performance",
    subTitle:
      "Our commitment to your project doesn't end at completion. ScrewFast offers ongoing maintenance and support services to ensure your construction's longevity and performance. From regular check-ups to emergency assistance, our responsive team is there to provide seamless support.",
    img: usingTools,
    imgAlt:
      "Man in orange and black vest wearing white helmet holding yellow and black power tool",
  },
  {
    isRightSection: true,
    title: "Scalable for Any Institution",
    subTitle:
      "Whether you're a small private school or a large university, our SaaS model scales to meet your needs. Pay based on the number of students, with optional advanced analytics packages available.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "In progress building structure",
    imgTwo: underConstruction,
    imgTwoAlt: "Brown and gray building under construction",
    btnExists: true,
    btnTitle: "Read more",
    btnURL: "#",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title="Quintet-AI Exam Evaluation System"
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "your-website-url/services", // Replace with your actual URL
    "url": "your-website-url/services",  // Replace with your actual URL
    "name": "Quintet-AI Exam Evaluation System",
    "description": "An AI-powered exam evaluation system that delivers individual feedback, accelerates grading, and provides deep insights into student progress.", // From "WHY US?" [cite: 5, 6]
    "isPartOf": {
      "@type": "WebSite",
      "url": "your-website-url",  // Replace with your actual URL
      "name": "Quintet-AI",
      "description": "Enable intelligence on education"  // From the document
    },
    "inLanguage": "en-US"
  }}
>
  <MainSection
    title="AI Exam Evaluation for Educational Institutions"
    subTitle="Quintet-AI is creating an AI exam evaluation system for educational institutions, providing individual feedback, speed evaluation, and student growth comparison."
    btnExists={true}
    btnTitle="Request a Demo"
    btnURL="#"
  />
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <FeaturesStats
    title="Key Benefits"
    subTitle="Quintet-AI offers AI-powered exam evaluation with instant feedback, detailed analytics, and increased efficiency."
    mainStatTitle="Instant Evaluation"
    mainStatSubTitle="Get results in minutes, not weeks."
    stats={[
      {
        stat: "Instant",
        description: "Speed of Evaluation",
      },
      {
        stat: "Personalized",
        description: "AI Feedback",
      },
      {
        stat: "Advanced",
        description: "Student Growth Analytics",
      },
      {
        stat: "Reduced",
        description: "Teacher Workload"
      },
    ]}
  />
</MainLayout>